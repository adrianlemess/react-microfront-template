{
    "compilerOptions": {
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "allowJs": true,
      "checkJs": true,
      "module": "esnext",
      "target": "es5",
      "jsx": "react",
      "moduleResolution": "node",
      "lib": ["es6", "dom"],
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "typeAcquisition": {
      "enable": true
    },
    "typeRoots": [
      "./typings.d.ts",
      "./node_modules/@types"
    ],
    "include": [
      "./src/.ts",
      "./src/**/*",
      "./typings.d.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.spec.js",
      "**/*.js",
      "**/*.jsx",
      "server",
      "dist"
    ]
  }
